



            <div class="panel-body">
                <div class="logo text-center">
                  <img src="/assets/images/brand-logo.png" alt="" >
                </div>
                <br />
                <h4 class="text-center mb5">Регистрация пользователя</h4>
                <a href="sign_in"  class="btn btn-primary btn-block">у вас уже есть аккаунт? </a>
                <p class="text-center"></p>
                <p id="notice"><%= notice %></p>
                  <div class="card mt-5">
                      <p class = "notice"> <%= notice %></p>
                      <p class = "alert"> <%= alert %></p>

                <div class="mb30"></div>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name) ) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
                    <div class="input-group mb15">


                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'E-mail' %>
                    </div><!-- input-group -->
                    <div class="input-group mb15">

                        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control is-invalid', placeholder: 'Пароль' %>
                    </div><!-- input-group -->
                    <div class="input-group mb15">

                        <%= f.password_field :password_confirmation, autocomplete: "current-password", class: 'form-control is-invalid', placeholder: 'Повторите пароль'  %>

                    </div><!-- input-group -->

                    <div class="clearfix">
                        <div class="pull-left">
                          <% if devise_mapping.rememberable? %>
                            <div class="ckbox ckbox-primary mt10">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                            </div>
                          <% end %>
                        </div>
                        <div class="pull-right">
                             <%= f.submit "Отправить ", class: 'btn btn-primary btn-block' %>

                        </div>
                    </div>


                  <% end %>


            </div><!-- panel-body -->
            <div class="panel-footer">


            </div><!-- panel-footer -->
        </div><!-- panel -->
